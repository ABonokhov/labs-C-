using System;
class Programm  
{
    static void Main(string[] args)
    {
        A obj = new A();
        Console.WriteLine (obj.Operation("++"));
        Console.ReadKey();
    }
}
    class A
    {
        private int a = 4;
        private int b = 2;
        public int c
        {
            get { return a-b;}
        }
      public int Operation (string str)
      {
          switch (str)
          { 
              case "*=": return a=a*b;
              case "-": return a-b;
              case "++": return a++;
          }
          return 0;
  }
}

